    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug in Exponent",
            "cwd": "${workspaceFolder}/Testing/PhoneConnect/ReactNative/PhoneConnectMobile",
            "type": "reactnative",
            "request": "launch",
            "platform": "exponent"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon - server",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/Testing/PhoneConnect/PhoneConnect.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/Testing/PhoneConnect/PhoneConnect.js"
        }
    ]
}